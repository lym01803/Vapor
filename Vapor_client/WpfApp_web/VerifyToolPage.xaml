<Window x:Class="WpfApp_web.VerifyToolPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_web"
        mc:Ignorable="d"
        Title="VerifyToolPage" Height="250" Width="180">
    <Grid Margin="20,10,20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Button x:Name="btn1" Grid.Row="1" Content="选择校验目录" Click="Button_Click_1" FontSize="14"/>
        <Button x:Name="btn2" Grid.Row="3" Content="选择启动文件" Click="Button_Click_2" FontSize="14"/>
        <Button x:Name="btn3" Grid.Row="5" Content="生成校验文件" Click="Button_Click_3" FontSize="14"/>
    </Grid>
</Window>
